    <script type="text/javascript">
      var returnAccount = function (event) {
        event.preventDefault();

        var formData = new FormData();
        var accountId = $("[name=accountId]").text();

        formData.append("accountId", accountId);

        $.ajax({
          url: "deletedAccount/restoreAccount",
          type: "POST",
          data: formData,
          cache: false,
          contentType: false,
          processData: false,
        })
          .done(function (result) {
            if (result.success) {
              alert(result.mgs);
              location.reload();
            } else {
              alert(result.mgs);
            }
          })
          .fail(() => {
            alert("Không kết nối được với server");
          });
      };
      
      $("[name=btn_restore]").click(function () {
        var accountId = $(this).parent().parent().children().eq(0).html();
        var username = $(this).parent().parent().children().eq(1).html();
        $("[name=accountId]").text(accountId);
        $("[name=username]").text(username);
      });
    </script>
