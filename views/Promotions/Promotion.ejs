    <script type="text/javascript">
      var addPromotions = function (event) {
        event.preventDefault();
        var formData = new FormData();

        var promotionsName = $("[name=promotionsName]").val();
        var promotionsDescription = $("[name=promotionsDescription]").val();
        var file = $("[name=promotionsImg]").get(0).files;

        formData.append("promotionsImg", file[0]);
        formData.append("promotionsName", promotionsName);
        formData.append("promotionsDescription", promotionsDescription);

        $.ajax({
          url: "promotions/addPromotions",
          type: "POST",
          data: formData,
          cache: false,
          contentType: false,
          processData: false,
        })
          .done(function (result) {
            if (result.success) {
            //   alert(result.mgs);
              location.reload();
            } else {
              alert(result.mgs);
            }
          })
          .fail(() => {
            alert("Không kết nối được với server");
          });
      };
      var editPromotions = function (event) {
        event.preventDefault();

        var formData = new FormData();
        var promotionsId = $("[name=promotionsIdEdit]").val();
        var promotionsName = $("[name=promotionsNameEdit]").val();
        var promotionsDescription = $("[name=promotionsDescriptionEdit]").val();
        var file = $("[name=promotionsImgEdit]").get(0).files;
        formData.append("promotionsId", promotionsId);
        formData.append("promotionsImg", file[0]);
        formData.append("promotionsName", promotionsName);
        formData.append("promotionsDescription", promotionsDescription);

        $.ajax({
          url: "promotions/editPromotions",
          type: "POST",
          data: formData,
          cache: false,
          contentType: false,
          processData: false,
        })
          .done(function (result) {
            if (result.success) {
            //   alert(result.mgs);
              location.reload();
            } else {
              alert(result.mgs);
            }
          })
          .fail(() => {
            alert("Không kết nối được với server");
          });
      };
      var deletePromotions = function (event) {
        event.preventDefault();

        var formData = new FormData();
        var promotionId = $("[name=promotionsIdDel]").text();

        formData.append("promotionsId", promotionId);

        $.ajax({
          url: "promotions/deletePromotions",
          type: "POST",
          data: formData,
          cache: false,
          contentType: false,
          processData: false,
        })
          .done(function (result) {
            if (result.success) {
              alert(result.mgs);
              location.reload();
            } else {
              alert(result.mgs);
            }
          })
          .fail(() => {
            alert("Không kết nối được với server");
          });
      };
      var loadImg = function (event) {
        $("#promotionsImgForm").attr(
          "src",
          URL.createObjectURL(event.target.files[0])
        );
      };
      var loadImgEdit = function (event) {
        $("#promotionsImgFormEdit").attr(
          "src",
          URL.createObjectURL(event.target.files[0])
        );
      };
      $("[name=btn_edit]").click(function () {
        var promotionsId = $(this).parent().parent().children().eq(0).html();
        var promotionsName = $(this).parent().parent().children().eq(1).html();
        var promotionsDescription = $(this).parent().parent().children().eq(2).html();
        var img = $(this)
          .parent()
          .parent()
          .children()
          .eq(3)
          .children()
          .eq(0)
          .attr("src");
        $("#promotionsImgFormEdit").attr("src", img);
        $("[name=promotionsIdEdit]").val(promotionsId);
        $("[name=promotionsNameEdit]").val(promotionsName);
        $("[name=promotionsDescriptionEdit]").val(promotionsDescription);
      });
      $("[name=btn_delete]").click(function () {
        var promotionsIdDel = $(this).parent().parent().children().eq(0).html();
        var promotionsNameDel = $(this).parent().parent().children().eq(1).html();
        $("[name=promotionsIdDel]").text(promotionsIdDel);
        $("[name=promotionsNameDel]").text(promotionsNameDel);
      });
    </script>
