    <script type="text/javascript">
      var restorePromotion = function (event) {
        event.preventDefault();

        var formData = new FormData();
        var promotionId = $("[name=promotionId]").text();

        formData.append("promotionId", promotionId);
        $.ajax({
          url: "deletedPromotions/restorePromotions",
          type: "POST",
          data: formData,
          cache: false,
          contentType: false,
          processData: false,
        })
          .done(function (result) {
            if (result.success) {
              alert(result.mgs);
              location.reload();
            } else {
              alert(result.mgs);
            }
          })
          .fail(() => {
            alert("Không kết nối được với server");
          });
      };
      
      $("[name=btn_delete]").click(function () {
        var promotionId = $(this).parent().parent().children().eq(0).html();
      
        $("[name=promotionId]").text(promotionId);
      });
    </script>
