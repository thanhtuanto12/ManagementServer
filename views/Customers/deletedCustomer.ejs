  <script type="text/javascript">
    var restoreAccount = function (event) {
      event.preventDefault();

      var formData = new FormData();
      var customerId = $("[name=customerId]").text();

      formData.append("id", customerId);

      $.ajax({
        url: "deletedCustomer/restoreCustomer",
        type: "POST",
        data: formData,
        cache: false,
        contentType: false,
        processData: false,
      })
        .done(function (result) {
          if (result.success) {
            alert(result.mgs);
            location.reload();
          } else {
            alert(result.mgs);
          }
        })
        .fail(() => {
          alert("Không kết nối được với server");
        });
    };

    $("[name=btn_delete]").click(function () {
      var customerId = $(this).parent().parent().children().eq(0).html();
      var name = $(this).parent().parent().children().eq(1).html();
      $("[name=customerId]").text(customerId);
      $("[name=name]").text(name);
    });
  </script>
